@model ClassRoom
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Sýnýf Oluþtur";
}

@section CSSSection {
   <style>
    .form-container {
        margin: 0 auto;
        max-width: 600px;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f8f9fa;
    }

    .form-header {
        border-bottom: 2px solid #0056b3; /* Koyu mavi */
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

        .form-header h2 {
            font-size: 24px;
            color: #0056b3; /* Koyu mavi */
        }

    .form-group label {
        font-weight: 600;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #0056b3; /* Koyu mavi */
    }

    .btn-primary {
        background-color: #0056b3; /* Koyu mavi */
        border-color: #0056b3; /* Koyu mavi */
    }

        .btn-primary:hover {
            background-color: #004085; /* Daha koyu mavi */
            border-color: #002752; /* En koyu mavi */
        }
</style>
}

<div class="container mt-5">
    <div class="form-container">
        <div class="form-header">
            <h2>Yeni Sýnýf Oluþtur</h2>
        </div>
        <form method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="Name">Sýnýf Adý</label>
                <input class="form-control" asp-for="Name" id="className" placeholder="Sýnýf adýný buraya girin">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Açýklama</label>
                <input class="form-control" asp-for="Description" id="classDescription" placeholder="Sýnýf açýklamasýný buraya girin">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Sýnýf Oluþtur</button>
        </form>
    </div>
</div>
